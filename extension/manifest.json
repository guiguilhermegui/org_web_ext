// manifest.json
{
  "manifest_version": 3,
  "name": "Extension Kanban",
  "version": "1.0",
  "description": "Organize your Chrome extensions in a Kanban board",
  "permissions": [
    "management",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}